<%= render "shared/errors", obj: @article %>
<div class="row">
  <div class="col-xs-12">
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    
    <div class="form-group">
      <div class="control-label col-xs-2">
        <%= f.label :title %><br/>
      </div>
    
      <div class="col-xs-8">
        <%= f.text_field :title, class: "form-control", placeholder: "Title of Article", autofocus: true %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="control-label col-xs-2">
        <%= f.label :description %><br/>
      </div>
      <div class="col-xs-8">
        <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of Article" %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :categories %>
      </div>
        <div class="col-sm-8">
          <%= f.collection_select( :category_ids, Category.all, :id, :name, {:selected => Category.first.id}, {:multiple => true})%>
        </div>
      </div>  
    </div>
    
    
    <div class="form-group" align="center">
      <div class="col-sm-offset-4 col-sm-4">
        <%= f.submit class: 'btn btn-primary btn-lg' %><hr/>
      </div>
    </div>  
<% end %>
    
      <div class="col-sm-4 col-sm-offset-4" align="center">
        [ <%= link_to "Cancel request and return to article listing", articles_path %> ]
      </div>
      
    
  
  </div>
</div>