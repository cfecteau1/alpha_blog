<h2 align="center">Title: <%= @article.title %></h2>
<div class="well col-xs-8 col-xs-offset-2">
   <% if @article.user %>
     <ul class="listing">
        <div class="row" align="center">
          <div class="col-md-4 col-md-offset-4">
            <li>Created by:</li>
            <li>
              <%= link_to gravatar_for(@article.user), user_path(@article.user) %>
            </li>
            <li class="article-title">
              <%= link_to @article.user.username, user_path(@article.user) %>
            </li>
            <li><small>
                <%= pluralize(@article.user.articles.count, "article") if @article.user.articles %>
            </small></li>
          </div>
        </div>
      </ul>
    <% end %>
  <h4 class="center description" style="clear:left;"><srong>Description:</srong></h4>
  <hr>
  <%= simple_format(@article.description) %>  
  <% if @article.categories.any? %>
    <p>Categories: <%= @article.categories %></p>
  <% end %>
  <div class="article-actions">
    <% if logged_in? && (current_user == @article.user || current_user.admin?) %>
    <%= link_to 'Edit this Article', edit_article_path(@article), class:"btn btn-xs btn-primary" %> 
    <%= link_to 'Delete this article', article_path(@article), method: :delete,
                                      data: {confirm: "Are you sure you want to delete this article"},
                                      class: "btn btn-xs btn-danger" %>
    <% end %>                                  
    <%= link_to "View all articles", articles_path, class:"btn btn-xs btn-success" %>
  </div>
  <% unless @article.comments.empty? %>
   <p>
     <small> 
       <%= @article.comments.count %> comments<% end %>
      </small>
    </p>
<% unless @article.comments.empty? %>
<div class= "well" style="background:#fff; border:1px solid #4b4bbf;">
 <ul style="list-style:none;">
   <% @article.comments.each do |comment|%>
     <div class = "well" style="margin-left:-6%;">
       <li>
        <h5><%= comment.comment %></h5>
       </li>
       <li><small>Created by: <%= User.find(comment.user_id).username %>,  <%= time_ago_in_words(comment.created_at) %> ago,</small></li>
     </div>   
   <% end %>
  </ul>
</div>  
<% end %>
   <%= render "shared/comments_form" %> 
</div>
